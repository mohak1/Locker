<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/lockerstatus_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locker Status"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getalocker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Get a locker"
        app:layout_constraintEnd_toEndOf="@+id/lockerstatus_textview"
        app:layout_constraintStart_toStartOf="@+id/lockerstatus_textview"
        app:layout_constraintTop_toBottomOf="@+id/lockerstatus_textview" />

    <TextView
        android:id="@+id/lockstatus_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock Status"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/lockerstatus_textview"
        app:layout_constraintEnd_toEndOf="@+id/lockerstatus_textview"
        app:layout_constraintTop_toBottomOf="@+id/lockerstatus_textview"
        />
    <Button
        android:id="@+id/togglelocker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Locker"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/lockstatus_textview"
        app:layout_constraintStart_toStartOf="@+id/lockstatus_textview"
        app:layout_constraintTop_toBottomOf="@+id/lockstatus_textview" />

    <Button
        android:id="@+id/invalidatelocker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invalidate Locker"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/togglelocker_button"
        app:layout_constraintStart_toStartOf="@+id/togglelocker_button"
        app:layout_constraintTop_toBottomOf="@+id/togglelocker_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>