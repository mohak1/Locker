<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/lockerstatus_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You don't have a locker"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getalocker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Get a locker"
        app:layout_constraintEnd_toEndOf="@+id/lockerstatus_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lockerstatus_textview"
        app:layout_constraintTop_toBottomOf="@+id/lockerstatus_textview" />

    <Button
        android:id="@+id/openlocker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open locker"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/lockerstatus_textview"
        app:layout_constraintStart_toStartOf="@+id/lockerstatus_textview"
        app:layout_constraintTop_toBottomOf="@+id/lockerstatus_textview" />

    <Button
        android:id="@+id/locklocker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock locker"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/openlocker_button"
        app:layout_constraintStart_toStartOf="@+id/openlocker_button"
        app:layout_constraintTop_toBottomOf="@+id/openlocker_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>